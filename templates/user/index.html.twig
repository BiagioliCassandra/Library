{% extends 'base.html.twig' %}

{% block title %}Liste des membres{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
  <div style="width:90%">
    <div class="d-flex justify-content-center">
    <h1>Liste des membres</h1>
  </div>
  <div class="d-flex justify-content-between">
    <a href="{{ path('user_new') }}" class="btn btn-light border-dark mb-2">Ajouter un membre</a>
    <a href="{{ path('user_home') }}" class="btn btn-light border-dark mb-2">Retour</a>
  </div>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Age</th>
                <th>N° de carte</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Code Postale</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>

                <td><a href="{{ path('user_show', {'id': user.id}) }}">{{ user.name }}</a></td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.age }}</td>
                <td>{{ user.cardNumber }}</td>
                <td>{{ user.adress }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.postalCode }}</td>
                <td>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning"><i class="far fa-edit fa-1x"></i></a>
                    <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-danger"><i class="fas fa-trash fa-1x"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  </div>
</div>
{% endblock %}
