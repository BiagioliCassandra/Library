{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
  <div style="width:50%">
    <div class="d-flex justify-content-center">
    <h1>Information du membre</h1>
  </div>
  <a href="{{ path('user_index') }}" class="btn btn-light border-dark">Retour</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
              <th>Nom</th>
              <td>{{ user.name }}</td>
            </tr>
            <tr>
              <th>Prénom</th>
              <td>{{ user.firstname }}</td>
            </tr>
            <tr>
              <th>Age</th>
              <td>{{ user.age }}</td>
            </tr>
            <tr>
              <th>N° de carte</th>
              <td>{{ user.cardNumber }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ user.adress }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ user.city }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ user.postalCode }}</td>
            </tr>
        </tbody>
    </table>
    {{ include('user/_delete_form.html.twig') }}
  </div>
</div>

{% endblock %}
