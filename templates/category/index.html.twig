{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
  <div style="width:90%">
    <div class="d-flex justify-content-center">
      <h1>Liste des categories</h1>
    </div>
    <div class="d-flex justify-content-between">
      <a href="{{ path('category_new') }}" class="btn btn-light border-dark mb-2">Créer une catégorie</a>
      <a href="{{ path('Administrator_home') }}" class="btn btn-light border-dark mb-2">Retour</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  </div>
</div>
{% endblock %}
