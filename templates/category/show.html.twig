{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
  <div style="width:50%">
    <div class="d-flex justify-content-center">
      <h1>Categorie</h1>
    </div>
    <a href="{{ path('category_index') }}" class="btn btn-light border-dark">Retour</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-dark border-dark">Modifier</a>

    {{ include('category/_delete_form.html.twig') }}
  </div>
</div>
{% endblock %}
